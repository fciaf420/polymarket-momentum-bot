# Polymarket Bot Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: Wallet Configuration
# ===========================================
# Your Ethereum private key (without 0x prefix)
# SECURITY: Never commit this to version control!
PRIVATE_KEY=your_private_key_here

# ===========================================
# Polymarket API Configuration
# ===========================================
# CLOB API host
HOST=https://clob.polymarket.com

# Chain ID (137 = Polygon Mainnet)
CHAIN_ID=137

# Polymarket WebSocket endpoints
WS_RTDS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/market
WS_USER_URL=wss://ws-subscriptions-clob.polymarket.com/ws/user

# ===========================================
# Trading Strategy Parameters
# ===========================================
# Position size as percentage of account balance (0.01 = 1%)
POSITION_SIZE_PCT=0.02

# Minimum gap threshold to trigger entry (0.03 = 3%)
GAP_THRESHOLD=0.03

# Minimum price move threshold (0.02 = 2% in <1 minute)
MOVE_THRESHOLD=0.02

# Maximum concurrent positions
MAX_POSITIONS=3

# Minimum liquidity in USD to enter a position
MIN_LIQUIDITY=1000

# Maximum hold time in minutes
MAX_HOLD_MINUTES=12

# Exit gap threshold (gap < 1% means market caught up)
EXIT_GAP_THRESHOLD=0.01

# ===========================================
# Risk Management
# ===========================================
# Maximum drawdown before stopping (0.10 = 10%)
MAX_DRAWDOWN=0.10

# Stop loss percentage per trade (0 = disabled)
STOP_LOSS_PCT=0

# ===========================================
# Volatility Detection (Bollinger Bands)
# ===========================================
# Bollinger Bands period
BB_PERIOD=20

# Standard deviation multiplier
BB_STD_DEV=2

# Volatility squeeze threshold (std dev < threshold = low vol)
VOLATILITY_SQUEEZE_THRESHOLD=0.005

# ===========================================
# Operation Mode
# ===========================================
# Backtest mode: true = simulation, false = live trading
BACKTEST=true

# Dry run mode: true = simulate orders, false = execute real orders
DRY_RUN=true

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info

# Trade history CSV output path
TRADE_HISTORY_PATH=./trades.csv

# ===========================================
# Binance Fallback
# ===========================================
# Enable Binance fallback for spot prices
BINANCE_FALLBACK_ENABLED=true

# Binance WebSocket URL
BINANCE_WS_URL=wss://stream.binance.com:9443/ws

# ===========================================
# API Credentials (auto-generated on first run)
# ===========================================
# These are derived from your private key - leave empty
API_KEY=
API_SECRET=
API_PASSPHRASE=
